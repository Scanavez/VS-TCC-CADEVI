@model IEnumerable<CadeviTCC.Models.Entities.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<p>
    <button class="btn btn-sm btn-success" type="button">@Html.ActionLink("Registrar novo usuário", "Create")</button>

   @*@Html.ActionLink("Registrar novo", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tipoUsuario.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tipoUsuario.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>

            @if (Session["usuarioTipo"].Equals(2))
            {
                <button class="btn btn-sm btn-white" type="button"> @Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                <button class="btn btn-sm btn-warning" type="button"> @Html.ActionLink("Deletar", "Delete", new { id = item.Id })</button>
            }
        </td>
    </tr>
}

</table>
